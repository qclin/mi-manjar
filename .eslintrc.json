{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/typescript",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "no-unused-vars": "off",
    "import/no-unresolved": "off"
  },
  "overrides": [
    {
        "files": ["*.ts", "*.tsx"],
        "rules": {
            "no-undef": "off"
        }
    }
  ],
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "typescript": {} // This helps eslint-plugin-import resolve TypeScript modules
    }
  }
}